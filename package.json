{
  "name": "code-architect-hakalab",
  "displayName": "Haka-Analyzer",
  "description": "Gemini 3-based code architect",
  "version": "0.0.1",
  "publisher": "hakalab",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-architect-hakalab.openSidebar",
        "title": "Open Code Architecture Analyzer"
      },
      {
        "command": "code-architect-hakalab.analyzeArchitecture",
        "title": "Analyze Architecture"
      },
      {
        "command": "code-architect-hakalab.clearDiagram",
        "title": "Clear Architecture Diagram"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "code-architect-hakalab.analyzeArchitecture",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ],
      "editor/title": [
        {
          "command": "code-architect-hakalab.analyzeArchitecture",
          "group": "navigation",
          "when": "resourceIsFile"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "haka-analyzer-sidebar",
          "title": "Code Architecture Analyzer",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "haka-analyzer-sidebar": [
        {
          "id": "codeArchitectAnalyzer",
          "name": "Analyzer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "fast-check": "^3.15.0"
  }
}